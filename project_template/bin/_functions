set -e

function _md5() {
  if builtin command -v md5 > /dev/null; then
    cat - | md5
  elif builtin command -v md5sum > /dev/null ; then
    cat - | md5sum | awk '{print $1}'
  else
    return 1
  fi

  return 0
}

function command_available() {
  command -v "$@" >/dev/null 2>&1
}

function warning() {
  echo "$(tput setaf 3)$@$(tput sgr0)"
}
