#!/usr/bin/env bash
set -e

yarn run build

MAJI_PACKAGE_PATH=$(git rev-parse --show-toplevel)

TMP_DIR=$(mktemp -d 2>/dev/null || mktemp -d -t maji-tests)
MAJI_VERSION="file:$MAJI_PACKAGE_PATH" ./packages/create-maji-app/create-app.js nl.kabisa.test-app "$TMP_DIR"

pushd "$TMP_DIR"
  yarn test
popd
